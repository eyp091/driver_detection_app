<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Uygulama Teması -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Genel Renkler -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#EEEEEE</item>
        <item name="colorAccent">#FFFFFF</item>

        <!-- Arka Plan -->
        <item name="android:windowBackground">@drawable/system_background</item>

        <!-- ActionBar Özelleştirmesi -->
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Buton Özelleştirmesi -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="colorButtonNormal">#EEEEEE</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Özel Toolbar -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#2196F3</item>
        itme
        <item name="android:titleTextAppearance">@style/CustomTitleText</item>
    </style>

    <!-- Başlık Metni Stili -->
    <style name="CustomTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Özel Buton -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
